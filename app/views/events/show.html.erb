

<div class="flex flex-col ml-10 w-1/2">
  <p style="color: green"><%= notice %></p>
  <h1 class="text-4xl font-semibold mb-8">Event</h1>
  <%= render @event %>

  <div class="flex flex-row space-x-4 mt-4">
    <%= link_to "Edit this event", edit_event_path(@event), class: "rounded-lg border-gray-200 border-2 p-2" %> 
    <%= link_to "Back to events", events_path, class: "rounded-lg border-gray-200 border-2 p-2" %>

    <%= button_to "Destroy this event", @event, method: :delete, class: "rounded-lg bg-red-600 text-white p-2" %>
  </div>
</div>

