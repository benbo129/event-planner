<div class="flex flex-col ml-10 w-1/2">
  <p style="color: green"><%= notice %></p>
  <h1 class="text-4xl font-semibold mb-8">Ticket</h1>
  <%= render @ticket %>

  <div class="flex flex-row space-x-4 mt-4">
    <%= link_to "Edit this ticket", edit_ticket_path(@ticket), class: "rounded-lg border-gray-200 border-2 p-2" %> 
    <%= link_to "Back to tickets", tickets_path, class: "rounded-lg border-gray-200 border-2 p-2" %>

    <%= button_to "Destroy this ticket", @ticket, method: :delete, class: "rounded-lg bg-red-600 text-white p-2" %>
  </div>
</div>

